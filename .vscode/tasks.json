{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with Correct encoding",
            "command": "cmd",
            "args": [
                "/c",
                "chcp",
                "65001",
                ">nul",
                "&&",
                "cl.exe",
                "/utf-8",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Build with Correct encoding"
        }
    ]
}